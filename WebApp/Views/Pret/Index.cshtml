@{
    ViewData["Title"] = "Simulation de prêt bancaire";
}

<h2>Simulation de prêt bancaire</h2>

<form asp-controller="Pret" asp-action="Result" method="post">
    <label>Montant du prêt :</label>
    <input type="number" name="montant" required /><br/><br/>

    <label>Taux annuel (%) :</label>
    <input type="number" step="0.01" name="taux" required /><br/><br/>

    <label>Durée (mois) :</label>
    <input type="number" name="duree" required /><br/><br/>

    <button type="submit">Calculer</button>
</form>
